<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the SeekBar (behind the progress) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size android:height="6dp"/> <!-- Set thickness for background -->
            <solid android:color="#AAAAAA"/> <!-- Background color (grey) -->
        </shape>
    </item>
    <!-- Progress of the SeekBar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <size android:height="6dp"/> <!-- Set thickness for progress -->
                <solid android:color="#F08080"/> <!-- Progress color (light coral) -->
            </shape>
        </clip>
    </item>
</layer-list>
